<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMensajes">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3E998">

        <ImageView
            android:id="@+id/estadoSaludImg"
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/hourglass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textEstadoSalud"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="1dp"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text=""
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="175dp"
            android:layout_height="52dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/emergencia"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonEmergencia"
            app:layout_constraintVertical_bias="0.07" />

        <Button
            android:id="@+id/buttonEmergencia"
            android:layout_width="83dp"
            android:layout_height="78dp"
            android:layout_marginTop="48dp"
            android:background="?android:attr/alertDialogIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textEstadoSalud" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>